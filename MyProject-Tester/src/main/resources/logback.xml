<configuration>
    <!--自定义颜色配置-->
    <conversionRule conversionWord="customcolor" converterClass="com.cmj.example.LogbackColorful"/>
    <!--控制台日志配置-->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %customcolor(%-5level) --- %magenta([%10thread]) %cyan(%logger{15}) : %msg%n</pattern>
            <charset>utf-8</charset>
        </encoder>
    </appender>
